<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- ...existing configuration... -->

    <!-- Resource reference per JNDI DataSource -->
    <resource-ref>
        <description>Postgres DataSource</description>
        <res-ref-name>jdbc/PortaleProfiliDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Servlet per test connessione DB -->
    <servlet>
        <servlet-name>DbTestServlet</servlet-name>
        <servlet-class>it.montepaschi.webapp.servlet.DbTestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DbTestServlet</servlet-name>
        <url-pattern>/db-test</url-pattern>
    </servlet-mapping>

    <!-- Servlet per logo -->
    <servlet>
        <servlet-name>LogoServlet</servlet-name>
        <servlet-class>it.montepaschi.webapp.servlet.LogoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoServlet</servlet-name>
        <url-pattern>/logo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoServlet</servlet-name>
        <url-pattern>/catalogoprofili/logo</url-pattern>
    </servlet-mapping>

    <!-- ...existing configuration... -->
</web-app>