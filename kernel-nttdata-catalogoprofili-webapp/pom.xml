<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.nttdata.kernel</groupId>
        <artifactId>kernel-nttdata-catalogoprofili</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../kernel-nttdata-catalogoprofili/pom.xml</relativePath>
        <!-- ðŸ‘† percorso corretto verso il POM padre -->
    </parent>

    <artifactId>kernel-nttdata-catalogoprofili-webapp</artifactId>
    <packaging>war</packaging>

    <properties>
        <java.version>17</java.version>
        <zk.version>10.0.0-jakarta</zk.version>
    </properties>

    <dependencies>
        <!-- ZK Core -->
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zk</artifactId>
            <version>${zk.version}</version>
        </dependency>

        <!-- ZK Plus -->
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zkplus</artifactId>
            <version>${zk.version}</version>
        </dependency>

        <!-- ZK Bind -->
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zkbind</artifactId>
            <version>${zk.version}</version>
        </dependency>

        <!-- Servlet API per Tomcat -->
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
            <version>6.0.0</version>
            <scope>provided</scope>
        </dependency>

        <!-- opzionale: dipendenza dal modulo services -->
        <dependency>
            <groupId>com.nttdata.kernel</groupId>
            <artifactId>kernel-nttdata-catalogoprofili-services</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Driver PostgreSQL -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>42.6.0</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>catalogoprofili</finalName> <!-- nome del WAR generato -->
        <plugins>
            <!-- Plugin di compilazione -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <!-- Plugin WAR per generare il pacchetto per Tomcat -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.4.0</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
